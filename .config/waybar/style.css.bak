* {
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 16px;
  border: none;
  border-radius: 14px;
  min-height: 24px;
}

window#waybar {
  background: rgba(30, 30, 30, 0.1);
  border-radius: 14px;
  color: #ffffff;
}

#workspaces button {
  padding: 0 10px;
  margin: 2px;
  border-radius: 16px;
  background: rgba(255, 255, 255, 0.1);
  color: #bbb;
}

#workspaces button.active {
  border: 2px solid rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.25);
  color: #fff;
}

#battery,
#clock,
#memory,
#cpu,
#network,
#pulseaudio,
#tray,
#custom-updates,
#custom-outlook,
#custom-teams,
#custom-brave,
#custom-chatgpt {
  padding: 0 10px;
  margin: 2px 4px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.25);
  border: 2px solid rgba(255, 255, 255, 0.7);
}
